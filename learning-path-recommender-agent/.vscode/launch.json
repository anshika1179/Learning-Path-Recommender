{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Streamlit App",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/app.py",
                "--server.port=8501"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}